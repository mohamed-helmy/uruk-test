<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.stock.discount.revaluation</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock_landed_costs.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="production_lot_info" position="after">
                    <h2>Stock Discount Valuation</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Affect discounts on reception operations and split them among products to update their cost price.">
                            <div class="o_setting_right_pane">
                                <div class="text-muted">
                                    Add additional discounts in the value of the product.
                                </div>
                                <div class="content-group">
                                    <div class="content-group" attrs="{'invisible': [('module_stock_landed_costs', '=', False)]}">
                                        <div class="mt16">
                                            <label for="sdr_journal_id" string="Default Journal"/>
                                            <field name="sdr_journal_id"/>
                                        </div>
                                        <div class="mt16">
                                            <label for="sdr_product_id" string="Default Discount Product"/>
                                            <field name="sdr_product_id" domain="[('type', '=', 'service')]"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
