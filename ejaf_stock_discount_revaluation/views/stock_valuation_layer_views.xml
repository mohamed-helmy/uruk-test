<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="stock_valuation_layer_form_inherited" model="ir.ui.view">
            <field name="name">stock.valuation.layer.form.inherited</field>
            <field name="model">stock.valuation.layer</field>
            <field name="inherit_id" ref="stock_landed_costs.stock_valuation_layer_form_inherited" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='stock_landed_cost_id']" position="after">
                    <field name="is_stock_discount" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='stock_landed_cost_id']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('stock_landed_cost_id', '=', False), ('is_stock_discount', '=', True)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

