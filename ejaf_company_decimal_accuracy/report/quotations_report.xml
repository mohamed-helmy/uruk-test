<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_saleorder_document_remov_tax" inherit_id="sale.report_saleorder_document">
            <xpath expr="//table//tbody//td[@name='td_quantity']" position="replace">
                <td class="text-right" t-if="doc.company_id.is_not_decimal_accuracy">
                    <span t-esc="round(line.product_uom_qty)"/>
                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                </td>
                <td class="text-right" t-else="">
                    <span t-field="line.product_uom_qty"/>
                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                </td>


            </xpath>

        </template>


    </data>
</odoo>