<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_new" inherit_id="account.report_invoice_document">
            <xpath expr="//table//tbody//tr//td[2]" position="replace">
                <td class="text-right" t-if="o.company_id.is_not_decimal_accuracy">
                    <span t-esc="round(line.quantity)"/>
                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                </td>
                <td class="text-right" t-else="">
                    <span t-field="line.quantity"/>
                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                </td>

            </xpath>
        </template>


    </data>
</odoo>