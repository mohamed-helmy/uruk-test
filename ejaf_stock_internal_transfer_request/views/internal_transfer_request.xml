<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="internal_transfer_request_form_view" model="ir.ui.view">
            <field name="name">internal.transfer.request.form</field>
            <field name="model">internal.transfer.request</field>
            <field name="arch" type="xml">
                <form string="Transfer Request">
                    <header>
                        <button name="action_submit" string="submit"
                                attrs="{'invisible': [('state', '!=', 'draft')]}" type="object"/>
                        <button name="create_internal_transfer" string="Approve"
                                attrs="{'invisible': [('state', '!=', 'submit')]}" type="object"
                                groups="ejaf_stock_internal_transfer_request.group_stock_request_manager"/>
                        <button name="action_reject_request" string="Reject"
                                attrs="{'invisible': [('state', '!=', 'submit')]}"
                                type="object"
                                groups="ejaf_stock_internal_transfer_request.group_stock_request_manager"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,submit,approved,rejected"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" icon="fa-clipboard" type="object"
                                    name="open_internal_transfer_ids" string="Internal Transfer">

                            </button>
                        </div>
                        <group>
                            <div class="oe_title">
                                <h1>
                                    <field name="name"/>
                                </h1>
                            </div>

                        </group>

                        <group>
                            <group>
                                <field name="user_id" attrs="{'readonly':[('state','in', ('rejected','approved'))]}"/>
                                <field name="partner_id"
                                       attrs="{'readonly':[('state','in', ('rejected','approved'))]}"/>
                                <field name="company_id"
                                       groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="date"
                                       attrs="{'readonly':[('state','in', ('rejected','approved'))]}"/>


                            </group>
                        </group>
                        <notebook>
                            <page name="transfer_lines" string="Transfer Lines">
                                <field name="request_line_ids"
                                       attrs="{'readonly':[('state','in', ('rejected','approved'))]}">
                                    <tree editable="bottom">
                                        <field name="product_id"
                                               attrs="{'readonly':[('state','in', ('rejected','approved'))]}"/>
                                        <field name="description"
                                               attrs="{'readonly':[('state','in', ('rejected','approved'))]}"/>
                                        <field name="product_qty"
                                               attrs="{'readonly':[('state','in', ('rejected','approved'))]}"/>
                                        <field name="available_qty"
                                               groups="ejaf_stock_internal_transfer_request.group_show_available_qty"
                                               force_save="1"/>

                                        <field name="uom_id"
                                               attrs="{'readonly':[('state','in', ('rejected','approved'))]}"/>
                                        <field name="picking_type_id"
                                               attrs="{'readonly':[('state','in', ('rejected','approved'))]}"
                                               domain="[('code','=','internal')]"/>
                                        <field name="location_id"
                                               attrs="{'readonly':[('state','in', ('rejected','approved'))]}"/>
                                        <field name="location_dest_id"
                                               attrs="{'readonly':[('state','in', ('rejected','approved'))]}"/>
                                        <field name="notes"
                                               attrs="{'readonly':[('state','in', ('rejected','approved'))]}"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="other_information" string="Other Information">
                                <group>
                                    <group>
                                        <field name="delivery_method_id"
                                               attrs="{'readonly':[('state','in', ('rejected','approved'))]}"/>
                                    </group>
                                    <group>
                                        <field name="estimated_cost"
                                               attrs="{'readonly':[('state','in', ('rejected','approved'))]}"/>
                                    </group>
                                </group>
                            </page>
                            <page name="reject_reason" string="Reject Reason"
                                  attrs="{'invisible':[('state','!=','rejected')],'readonly':[('state','in', ('rejected','approved'))]}">
                                <group>
                                    <group>
                                        <field name="reject_reason"
                                               attrs="{'invisible':[('state','!=','rejected')],'readonly':[('state','in', ('rejected','approved'))]}"/>
                                    </group>
                                    <group>
                                    </group>

                                </group>
                            </page>

                        </notebook>


                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>


                </form>
            </field>
        </record>
        <record id="internal_transfer_request_tree_view" model="ir.ui.view">
            <field name="name">internal.transfer.request.tree</field>
            <field name="model">internal.transfer.request</field>
            <field name="arch" type="xml">
                <tree string="Transfer Request">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="internal_transfer_request_action_view" model="ir.actions.act_window">
            <field name="name">Transfer Requests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">internal.transfer.request</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
            </field>
        </record>

        <menuitem id="transfer_request_root" name="Transfer Requests" sequence="3"
                  web_icon="ejaf_stock_internal_transfer_request,static/description/icon_image.png"
                  groups="ejaf_stock_internal_transfer_request.group_stock_request_user"/>

        <menuitem id="internal_transfer_request_categ" name="Transfer Requests"
                  parent="ejaf_stock_internal_transfer_request.transfer_request_root" sequence="1"/>

        <menuitem id="internal_transfer_request_menu_action" name="Transfer Requests"
                  parent="ejaf_stock_internal_transfer_request.internal_transfer_request_categ"
                  action="internal_transfer_request_action_view" sequence="1"/>


    </data>
</odoo>