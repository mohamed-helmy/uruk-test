<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_helpdesk_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="71"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div name="helpdesk_settings_block" class="app_settings_block" data-string="Helpdesk"
                         string="Helpdesk" data-key="helpdesk"
                         groups="helpdesk.group_helpdesk_manager">
                        <h2>Helpdesk</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="product_categ_id"/>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                          groups="base.group_multi_company"/>

                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="product_categ_id" required="True"
                                                   class="o_light_label"
                                                   />
                                        </div>
                                    </div>
                                </div>
                            </div>

                    </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="helpdesk_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'helpdesk'}</field>
        </record>

        <menuitem
                id="menu_helpdesk_settings"
                name="Settings"
                parent="helpdesk.helpdesk_menu_config"
                sequence="100"
                action="helpdesk_config_settings_action"/>


    </data>
</odoo>

