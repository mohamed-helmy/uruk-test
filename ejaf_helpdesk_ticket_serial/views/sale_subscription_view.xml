<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_subscription_view_form" model="ir.ui.view">
            <field name="name">sale.subscription</field>
            <field name="model">sale.subscription</field>
            <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="is_service_contract" />
                </xpath>

                <xpath expr="//page[@id='other_info']" position="after">
                    <page name="product_serials" string="Products&amp;Serials"
                          attrs="{'invisible': [('is_service_contract','=',False)]}">
                        <field name="product_serial_ids">
                            <tree editable="1">
                                <field name="product_id" />
                                <field name="lot_id" options="{'no_create_edit': True}" />
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>
    </data>
</odoo>