<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_helpdesk_ticket" name="ticket_portal" inherit_id="helpdesk.portal_helpdesk_ticket">
        <xpath expr="//t[@t-call='portal.portal_table']/t/tr/td[last()]" position="after">
            <t t-if="ticket.stage_id.auto_change_to_stage_id">
                <td class="text-center">
                    <a role="button" class="btn btn-primary"
                       t-att-href="'/my/ticket/confirm/%s/%s' % (ticket.id, ticket.access_token)">Confirm The Ticket
                    </a>
                </td>
            </t>

        </xpath>
    </template>
</odoo>

