<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='taxes_id']" position="before">
                <field name="discount_type" force_save="1" groups="product.group_discount_per_so_line" optional="show"/>
                <field name="discount" string="Disc.%" force_save="1" attrs="{'invisible': [('discount_type', '=', 'fixed')]}" groups="product.group_discount_per_so_line" optional="show"/>
                <field name="discount_amount" force_save="1" attrs="{'readonly': [('discount_type', '!=', 'fixed')]}" groups="product.group_discount_per_so_line" optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>
