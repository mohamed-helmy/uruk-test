<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_multi_scrap_form_view" model="ir.ui.view">
        <field name="name">stock.multi.scrap.form</field>
        <field name="model">stock.multi.scrap</field>
        <field name="arch" type="xml">
            <form string="Scrap" >
                <header>
                    <button name="action_create_order_scrap" states="draft" string="Create Scrap Order" type="object" class="oe_highlight" groups="ejaf_stock_multi_scrap.group_manager_multi_scrap" context="{'not_unlink_on_discard': True}"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,done" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_scrapes" string="Scrap Orders"  type="object" class="oe_stat_button" icon="fa-pencil-square-o" states="done">
                        </button>

                    </div>
                    <div class="oe_title">
                        <h1>
                        
                            <field name="name" nolabel="1"/>
                        </h1>
                    </div>
                    <div class="oe_row">

                        <group>
                            <field name="expected_date" attrs="{'readonly': [('state', '=', 'done')]}"/>
                            <field name="analytic_tag_id" />
                            <field name="scrap_location_id" attrs="{'readonly': [('state', '=', 'done')]}"/>
                            <field name="company_id" groups="base.group_multi_company" attrs="{'readonly': [('state', '=', 'done')]}" />
                            <!-- <field name="products_ids" attrs="{'readonly': [('state', '=', 'done')]}"/> -->
                        </group>

                        <notebook>
                            <page string="Products" name="products">
                                <field name="products_ids"  attrs="{'readonly':[('state','=','done')]}">
                                    <tree editable="bottom">
                                        <field name="multi_scrap_id" invisible="1"/>
                                        <field name="product_id"/>
                                        <field name="scrap_qty"/>
                                        <field name="lot_id" attrs="{'readonly': [('product_tracking','=', 'none')]}"/>
                                        <field name="product_tracking" invisible="1"/>
                                        <field name="location_id"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="product_uom_category_id" invisible ="1" />

                                        <field name="product_uom_id" />
                                        <field name="package_id" groups="stock.group_tracking_lot"/>
                                        <field name="owner_id" groups="stock.group_tracking_owner"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </div>
                    <group>

                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <record id='stock_multi_scrap_tree_view' model='ir.ui.view'>

        <field name="name">stock.multi.scrap.tree</field>
        <field name="model">stock.multi.scrap</field>
        <field name="arch" type='xml'>
            <tree string="Multi Scrap">
                <field name="expected_date" />
                <field name="scrap_location_id" />
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state" />



            </tree>
        </field>
    </record>



    <record id='stock_multi_scrap_item_tree_view' model='ir.ui.view'>

        <field name="name">stock.multi.scrap.item.tree</field>
        <field name="model">stock.multi.scrap.item</field>
        <field name="arch" type='xml'>
            <tree string="Multi Scrap">

                <field name="product_id" />
                <field name="product_uom_id" />
                <field name="scrap_qty" />
                <field name="location_id" />
                <field name="owner_id" />
                <field name="package_id" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_stock_multi_scrap">
        <field name="name">Multi Scrap Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.multi.scrap</field>
        <field name="view_mode">tree,form,kanban</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">                Multi Scrap products              </p>
            <p>               Multi Scrapping a product will remove it from your stock. The product will                end up in a scrap location that can be used for reporting purpose.              </p>
        </field>
    </record>
    <menuitem id="menu_mulit_mrp_scrap" name="Mulit Scrap Orders" parent="stock.menu_stock_warehouse_mgmt" action="action_stock_multi_scrap" sequence="100"/>
</odoo>