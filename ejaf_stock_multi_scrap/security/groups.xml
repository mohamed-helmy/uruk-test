<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="group_user_multi_scrap" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_mutli_scrap"/>
        </record>

        <record id="group_manager_multi_scrap" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_mutli_scrap"/>
            <field name="implied_ids" eval="[(4, ref('group_user_multi_scrap'))]"/>
        </record>

        <record model="ir.rule" id="multi_scrap_company_rule">
            <field name="name">Multi : multi-company</field>
            <field name="model_id" ref="ejaf_stock_multi_scrap.model_stock_multi_scrap"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>

        </record>
    </data>
</odoo>