<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_company_create_sequences_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='logo']" position="before">
                    <field name="created_seq" invisible="True"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="create_sequence" string="create Sequence " type="object" class="oe_stat_button"
                                icon="fa-check"
                                attrs="{'invisible': ['|' ,('created_seq', '=', True) , ('id', '=', 1)]}"/>
                    </div>
                </xpath>

            </field>
        </record>
    </data>
</odoo>