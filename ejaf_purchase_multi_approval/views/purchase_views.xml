<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="multi_approval" invisible="1"/>
                    <field name="approval_allowed" invisible="1"/>
                    <field name="amount_limit_approval_allowed" invisible="1"/>
                    <field name="last_approved_level_id" invisible="1"/>
                    <field name="order_limit_exceeded" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="before">
                    <field name="next_approval_level_id" class="badge badge-info" attrs="{'invisible': ['|', ('next_approval_level_id', '=', False), ('multi_approval', '=', False)]}" options='{"no_open": True}'/>
                </xpath>
                <xpath expr="//button[@id='bid_confirm']" position="before">
                    <!-- confirm button in case of multi approvals -->
                    <button name="action_multi_approval" id="multi_approval" attrs="{'invisible': ['|', ('approval_allowed', '=', False), ('multi_approval', '=', False)]}" string="Confirm Order" type="object" class="oe_highlight"/>
                    <!-- confirm button in case of no multi approvals with limit approval group -->
                    <button name="action_multi_approval" id="limit_approval" attrs="{'invisible': ['|', '|', ('state', 'not in', ['draft', 'sent']), ('order_limit_exceeded', '=', False), ('multi_approval', '=', True)]}" string="Confirm Order" type="object" class="oe_highlight"/>

                    <!--draft and cancel buttons for multi-approval-->
                    <button name="button_draft" string="Set to Draft" type="object" attrs="{'invisible': ['|', '|', ('state', 'not in', ['approvals']), ('approval_allowed', '=', False), ('multi_approval', '=', False)]}"/>
                    <button name="button_cancel" string="Cancel" type="object" attrs="{'invisible': ['|', '|', ('state', 'not in', ['approvals']), ('approval_allowed', '=', False), ('multi_approval', '=', False)]}"/>
                </xpath>
                <xpath expr="//button[@name='button_approve']" position="replace">
                    <button name="button_approve" type="object" attrs="{'invisible': ['|', ('state', 'not in', ['to approve', 'amount_limitation']), ('amount_limit_approval_allowed', '=', False)]}" string="Approve Order" class="oe_highlight"/>

                    <!--draft and cancel buttons for limit-approval-->
                    <button name="button_draft" string="Set to Draft" type="object" attrs="{'invisible': ['|', ('state', 'not in', ['to approve', 'amount_limitation']), ('amount_limit_approval_allowed', '=', False)]}"/>
                    <button name="button_cancel" string="Cancel" type="object" attrs="{'invisible': ['|', ('state', 'not in', ['to approve', 'amount_limitation']), ('amount_limit_approval_allowed', '=', False)]}"/>
                </xpath>

                <!-- Hide normal confirm buttons in case of multi approvals or reaching the amount limit -->
                <xpath expr="//button[@id='bid_confirm']" position="replace">
                    <button name="button_confirm" type="object" attrs="{'invisible': ['|', '|', ('state', '!=', 'sent'), ('multi_approval', '=', True), ('order_limit_exceeded', '=', True)]}" string="Confirm Order" class="oe_highlight" id="bid_confirm"/>
                </xpath>
                <xpath expr="//button[@id='draft_confirm']" position="replace">
                    <button name="button_confirm" type="object" attrs="{'invisible': ['|', '|', ('state', '!=', 'draft'), ('multi_approval', '=', True), ('order_limit_exceeded', '=', True)]}" string="Confirm Order" id="draft_confirm"/>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="multi_approval" invisible="1"/>
                    <field name="next_approval_level_id"
                           class="badge badge-info"
                           options='{"no_open": True}' groups="ejaf_purchase_multi_approval.group_po_multi_approval_level"/>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_view_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="multi_approval" invisible="1"/>
                    <field name="next_approval_level_id"
                           class="badge badge-info"
                           options='{"no_open": True}' groups="ejaf_purchase_multi_approval.group_po_multi_approval_level"/>
                </xpath>
            </field>
        </record>

        <record id="view_purchase_order_filter_inherit" model="ir.ui.view">
            <field name="name">purchase.order.filter.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="next_approval_level_id"/>
                </xpath>
                <xpath expr="//group[1]" position="inside">
                    <filter string="Next Approval level" name="next_level" domain="[]" context="{'group_by': 'next_approval_level_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_view_search_inherit" model="ir.ui.view">
            <field name="name">purchase.order.search.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="next_approval_level_id"/>
                </xpath>
                <xpath expr="//group[1]" position="inside">
                    <filter string="Next Approval level" name="next_level" domain="[]" context="{'group_by': 'next_approval_level_id'}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
