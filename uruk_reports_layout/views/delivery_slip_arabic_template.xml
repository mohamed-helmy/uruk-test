<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_arabic_deliveryslip">


                    
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="uruk_reports_layout.arabic_external_layout">
                    <style>
                    .vl {
                    position: absolute;
                    top: 0px;
                    left: 800px;
                    border-left: 2px solid #e5e5e6;;
                    height: 1000px;
                    }
                    </style>

                    <div class="vl"/>

                       <style type="text/css">

                        @font-face {
                        font-family: 'Sans_Arabic';
                        src: local('Sans_Arabic'), local('Sans_Arabic'),
                        url(/uruk_reports_layout/static/fonts/uruk-fonts/Neo_Sans_Arabic_Regular.ttf) format('truetype');
                        }

                        * {
                        font-family: Sans_Arabic !important;
                        
                        }
                        </style>


                    <div class="page" style='padding-right:110px; padding-top:50px'>
                            <t t-set="partner"
                               t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                            <t t-if="partner" name="partner_header">
                                <t t-set="address">
                                    <div t-esc="partner"
                                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                                </t>
                            </t>
                            <h2 class="text-right">
                                <span t-field="o.name"/>
                            </h2>
                            <div class="row">
                                <div class="col-4"/>
                                <div class="col-4 text-right" name="div_sched_date">
                                    <strong>تاريخ الشحن</strong>
                                    <t t-if="o.state == 'done'">
                                        <p t-field="o.date_done" t-options='{"widget": "date"}'/>
                                    </t>
                                    <t t-if="o.state != 'done'">
                                        <p t-field="o.scheduled_date" t-options='{"widget": "date"}'/>
                                    </t>
                                </div>

                                <div t-if="o.origin" class="col-4 text-right">
                                    <strong>المصدر</strong>
                                    <p t-field="o.origin"/>
                                </div>
                            </div>
                            <table class="table table-sm text-right" t-if="o.state!='done'" name="stock_move_table">

                                <thead>
                                    <tr>

                                        <th class="text-right">
                                            <strong>الكمية</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>المنتج</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                                    <tr t-foreach="lines" t-as="move">

                                        <td class="text-right" t-if="o.company_id.is_not_decimal_accuracy">
                                            <span t-esc="round(move.product_uom_qty)"/>
                                            <span t-esc="round(move.product_uom)"/>
                                        </td>
                                        <td class="text-right" t-else="">
                                            <span t-field="move.product_uom_qty"/>
                                            <span t-field="move.product_uom"/>
                                        </td>
                                        <td>
                                            <span t-field="move.product_id"/>
                                            <p t-if="o.picking_type_code == 'outgoing'">
                                                <span t-field="move.product_id.sudo().description_pickingout"/>
                                            </p>
                                            <p t-if="o.picking_type_code == 'incoming'">
                                                <span t-field="move.product_id.sudo().description_pickingin"/>
                                            </p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table class="table table-sm mt48 text-right" t-if="o.move_line_ids and o.state=='done'"
                                   name="stock_move_line_table">
                                <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')"/>
                                <thead>
                                    <tr>
                                        <th class="text-right">
                                            <strong>الكمية</strong>
                                        </th>
                                        <th name="lot_serial" t-if="has_serial_number"
                                            groups="stock.group_lot_on_delivery_slip">
                                            رقم السريال
                                        </th>
                                        <th class="text-right">
                                            <strong>المنتج</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.move_line_ids" t-as="move_line">
                                        <td class="text-right">
                                            <span t-field="move_line.qty_done"/>
                                            <span t-field="move_line.product_uom_id"/>
                                        </td>

                                        <td t-if="has_serial_number and move_line.lot_name"
                                            groups="stock.group_lot_on_delivery_slip">
                                            <span t-field="move_line.lot_name"/>
                                        </td>
                                        <td t-elif="has_serial_number" groups="stock.group_lot_on_delivery_slip">
                                            <span t-field="move_line.lot_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="move_line.product_id"/>
                                            <p t-if="o.picking_type_code == 'outgoing'">
                                                <span t-field="move_line.product_id.sudo().description_pickingout"/>
                                            </p>
                                            <p t-if="o.picking_type_code == 'incoming'">
                                                <span t-field="move_line.product_id.sudo().description_pickingin"/>
                                            </p>
                                        </td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>

        </template>

        <report
                id="deliveryslip_arabic_print"
                string="وثيقة التسليم"
                model="stock.picking"
                report_type="qweb-pdf"
                name="uruk_reports_layout.report_arabic_deliveryslip"
                file="uruk_reports_layout.report_arabic_deliveryslip"
                print_report_name="'Delivery - %s' % (object.name).replace('/', '')"
        />
    </data>
</odoo>