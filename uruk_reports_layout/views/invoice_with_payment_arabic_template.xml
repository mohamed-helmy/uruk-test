<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_arabic_invoice_with_payment">



        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="uruk_reports_layout.arabic_external_layout">
                    <t t-set="address">
                        <div t-field="doc.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        <p t-if="doc.partner_id.vat">
                            <t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>
:
                            <span t-field="doc.partner_id.vat"/>
                        </p>
                    </t>



                    <style type="text/css">

                        @font-face {
                        font-family: 'Sans_Arabic';
                        src: local('Sans_Arabic'), local('Sans_Arabic'),
                        url(/uruk_reports_layout/static/fonts/uruk-fonts/Neo_Sans_Arabic_Regular.ttf) format('truetype');
                        }

                        * {
                        font-family: Sans_Arabic !important;
                        
                        }
                    </style>

                    <div class="vl"/>


                    <div class="page">
                        <div class="oe_structure"/>

                        <t t-if="doc.type == 'out_invoice' and doc.state == 'posted'">
                            <style>
                                  .style{
                                     with:100%;
                                  padding-right:100px;
                                  }
                            </style>

                            <style>
                            .vl {
                            position: absolute;
                            top: 0px;
                            z-index:90 !important;
                            left: 950px;
                            border-left: 2px solid #e5e5e6;;
                            height: 1100px;
                            }
                            </style>


                        </t>


                        <t t-if="doc.type == 'out_invoice' and doc.state == 'draft'">
                            <style>
                            .style{
                                  with:100%;
                                  padding-right:100px;
  
                            }
                            </style>
                            <style>
                            .vl {
                            position: absolute;
                            top: 0px;
                            z-index:90 !important;
                            left: 950px;
                            border-left: 2px solid #e5e5e6;;
                            height: 1100px;
                            }
                            </style>

                        </t>


                        <t t-if="doc.type == 'out_refund'">
                            <style>
                            .style{
                                  with:100%;
                                  padding-right:100px;
  
                            }
                            </style>
                            <style>
                            .vl {
                            position: absolute;
                            top: 0px;
                            z-index:90 !important;
                            left: 805px;
                            border-left: 2px solid #e5e5e6;;
                            height: 1000px;
                            }
                            </style>

                        </t>


                        <div class="container style">


                            <h2 class="mt16 text-right">
                                <span t-if="doc.name != '/'" t-field="doc.name"/>

                                <t>
                                    <span t-if="doc.type == 'out_invoice' and doc.state == 'posted'">فاتورة</span>
                                    <span t-if="doc.type == 'out_invoice' and doc.state == 'draft'">مسودة فاتورة</span>
                                    <span t-if="doc.type == 'out_invoice' and doc.state == 'cancel'">فاتورة ملغية</span>
                                    <span t-if="doc.type == 'out_refund'">اشعار دائن</span>
                                    <span t-if="doc.type == 'in_refund'">ملاحظة ائتمان بائع</span>
                                    <span t-if="doc.type == 'in_invoice'">فاتورة مشترى</span>

                                </t>
                            </h2>

                            <div class="row text-right" id="informations">
                                <div class="col-4">
                                    <strong>طريقة الدفع:</strong>
                                    <p class="m-0" t-field="doc.partner_id.default_payment_method_id.name"/>
                                </div>

                                <div t-if="doc.type in ('out_invoice', 'in_refund')" class="col-4">
                                    <strong>تاريخ الاستحقاق:</strong>
                                    <p class="m-0" t-field="doc.invoice_date_due"/>
                                </div>
                                <div class="col-auto mw-100 mb-2" t-if="doc.ref" name="reference">
                                    <strong>مرجع:</strong>
                                    <p class="m-0" t-field="doc.ref"/>
                                </div>


                                <div t-if="doc.user_id.name" class="col-4">
                                    <strong>تاريخ الفاتورة:</strong>
                                    <p class="m-0" t-field="doc.invoice_date"/>
                                </div>
                                <br/>
                                <div t-if="doc.user_id.name" class="col-4">
                                    <strong>العميل</strong>
                                    <p class="m-0" t-field="doc.partner_id.name"/>
                                </div>
                            </div>

                            <!-- Is there a discount on at least one line? -->
                            <t t-set="display_discount" t-value="any([l.discount for l in doc.invoice_line_ids])"/>

                            <table class="table table-sm o_main_table text-right">
                                <thead>
                                    <tr>
                                        <th name="th_subtotal" class="text-right">
                                            <t groups="account.group_show_line_subtotals_tax_excluded">الاجمالي</t>
                                            <t groups="account.group_show_line_subtotals_tax_included">ألسعر الكلي</t>
                                        </th>
                                        <th name="th_taxes" class="text-right">الضرائب</th>
                                        <th name="th_discount" t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                            <span>الخصم.%</span>
                                        </th>
                                        <th name="th_priceunit" class="text-right">سعر الوحدة</th>
                                        <th name="th_quantity" class="text-right">الكمية</th>
                                        <th name="th_description" class="text-right">الوصف</th>


                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">

                                    <t t-set="current_subtotal" t-value="0"/>

                                    <t t-foreach="doc.invoice_line_ids" t-as="line">

                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type">
                                                <td name="td_subtotal" class="text-right o_price_total">
                                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                                </td>
                                                <td name="td_taxes" class="text-right">
                                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"/>
                                                </td>
                                                <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                                    <span t-field="line.discount"/>
                                                </td>
                                                <td name="td_priceunit" class="text-right">
                                                    <span t-field="line.price_unit"/>
                                                </td>

                                                <td name="td_quantity" class="text-right" t-if="doc.company_id.is_not_decimal_accuracy">
                                                    <span t-esc="round(line.quantity)"/>
                                                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                                </td>
                                                <td name="td_quantity2" class="text-right" t-else="">
                                                    <span t-field="line.quantity"/>
                                                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                                </td>
                                                <td name="td_name">
                                                    <span t-field="line.name"/>
                                                </td>

                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td name="td_section_line" colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td name="td_note_line" colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </t>
                                        </tr>

                                    </t>
                                </tbody>
                            </table>

                            <div class="clearfix" name="so_total_summary">
                                <div id="total" class="row" name="total">
                                    <div class="col-4 text-right">
                                        <table class="table table-sm">
                                            <tr class="border-black o_subtotal" style="">
                                                <td name="td_amount_untaxed_label">
                                                    <span t-field="doc.amount_untaxed"/>

                                                </td>
                                                <td name="td_amount_untaxed" class="text-right">
                                                    <strong>الاجمالي الفرعي</strong>
                                                </td>
                                            </tr>

                                            <tr class="border-black o_total">

                                                <td name="td_amount_total" class="text-right">
                                                    <span t-field="doc.amount_total"/>
                                                </td>
                                                <td name="td_amount_total_label">
                                                    <strong>الاجمالي</strong>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="mt16 text-right" t-if="doc.type in ('out_invoice', 'in_refund')">
                                <span t-field="doc.invoice_payment_ref"/>
                                <span>:يرجى استخدام الاتصال التالي لدفعك</span>

                                <br/>
                                <span t-field="doc.invoice_payment_term_id.display_name"/>
                                <span>:شروط الدفع</span>

                            </div>

                        </div>
                    </div>




                </t>

            </t>
        </t>
    </template>

    <report id="invoice_arabic_with_pay_print" string="  الفاتورة مع المدفوعات" model="account.move" report_type="qweb-pdf" name="uruk_reports_layout.report_arabic_invoice_with_payment" file="uruk_reports_layout.report_arabic_invoice_with_payment" print_report_name="'Invoice With Payment - %s' % (object.name).replace('/', '')" />

</odoo>
