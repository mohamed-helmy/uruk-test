<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_arabic_purchase_rfq">

        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="uruk_reports_layout.arabic_external_layout">
                    <t t-set="address">
                        <div t-field="doc.partner_id"
                             t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>:
                            <span t-field="doc.partner_id.vat"/>
                        </p>
                    </t>

                       <style type="text/css">

                        @font-face {
                        font-family: 'Sans_Arabic';
                        src: local('Sans_Arabic'), local('Sans_Arabic'),
                        url(/uruk_reports_layout/static/fonts/uruk-fonts/Neo_Sans_Arabic_Regular.ttf) format('truetype');
                        }

                        * {
                        font-family: Sans_Arabic !important;
                        
                        }
                        </style>

                                           <style>
                    .vl {
                    position: absolute;
                    top: 0px;
                    left: 800px;
                    border-left: 2px solid #e5e5e6;;
                    height: 1000px;
                    }
                    </style>

                    <div class="vl"/>

                    <div class="page" style="padding-right:200px">
                        <div class="oe_structure"/>
                        <h2 class="text-right"><span t-field="doc.name"/>طلب عرض السعر</h2>
                        <br/>
                        <table class="table table-sm o_main_table text-right">
                            <thead>
                                <tr>
                                    <th class="text-right">الكمية</th>
                                    <th class="text-right"> التاريخ المتوقع</th>
                                    <th class="text-right">الوصف</th>
                                </tr>
                            </thead>
                        <tbody>
                    <t t-foreach="doc.order_line" t-as="order_line">
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if order_line.display_type == 'line_section' else 'font-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                            <t t-if="not order_line.display_type">
                               <td class="text-right" t-if="doc.company_id.is_not_decimal_accuracy">
                                    <span t-esc="round(order_line.product_qty)"/>
                                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                </td>
                               <td class="text-right" t-else="">
                                    <span t-field="order_line.product_qty"/>
                                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="order_line.date_planned"/>
                                </td>
                                 <td class="text-right">
                                    <span t-field="order_line.name"/>
                                </td>

                            </t>
                            <t t-else="">
                                <td colspan="99" id="section">
                                    <span t-field="order_line.name"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>

            <p t-field="doc.notes"/>

            <div class="oe_structure"/>

                    </div>
                </t>
            </t>
        </t>
    </template>
    <report
        string="طلب عرض السعر"
        id="purchase_rfq_arabic_print"
        model="purchase.order"
        report_type="qweb-pdf"
        name="uruk_reports_layout.report_arabic_purchase_rfq"
        file="uruk_reports_layout.report_arabic_purchase_rfq"
        print_report_name="'Request for Quotation - %s' % (object.name)"
    />

</odoo>