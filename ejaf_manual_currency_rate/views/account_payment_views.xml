<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_date']" position="before">
                    <field name="same_company_currency" invisible="1"/>
                    <field name="use_manual_currency_rate"
                        groups="base.group_multi_currency"
                    attrs="{'invisible': [('same_company_currency', '=', True)]}"/>
                    <field name="manual_currency_rate"
                        groups="base.group_multi_currency"
                        attrs="{'invisible': [('use_manual_currency_rate', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
