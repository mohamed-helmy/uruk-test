<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="same_company_currency" invisible="1"/>
                    <field name="use_manual_currency_rate"
                        groups="base.group_multi_currency"
                        attrs="{'invisible': ['|', ('same_company_currency', '=', True), ('type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]}"/>
                    <field name="manual_currency_rate"
                        groups="base.group_multi_currency"
                        attrs="{'invisible': ['|', ('type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund')), ('use_manual_currency_rate', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
