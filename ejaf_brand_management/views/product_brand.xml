<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_brand_form_view" model="ir.ui.view">
            <field name="name">product.brand.form</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <form string="Product Brands">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="user_id"/>
                                <field name="team_ids" widget="many2many_tags"/>
                                <field name="team_users_ids" widget="many2many_tags" invisible="1"/>
                            </group>
                            <group></group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="product_brand_tree_view" model="ir.ui.view">
            <field name="name">product.brand.tree</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <tree string="Product Brands">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="team_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>
        <record id="product_brand_action_view" model="ir.actions.act_window">
            <field name="name">Product Brands</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.brand</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create New Product Brand
                </p>
            </field>
        </record>
        <menuitem id="product_brand_action_menu" name="Product Brands" parent="sale.product_menu_catalog"
                  action="product_brand_action_view" sequence="2" groups="sales_team.group_sale_manager"/>


    </data>
</odoo>