<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="before">
                <field name="discount_type" force_save="1" groups="product.group_discount_per_so_line" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="after">
                <field name="discount_amount" force_save="1" attrs="{'readonly': [('discount_type', '!=', 'fixed')]}" groups="product.group_discount_per_so_line" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="attributes">
                <attribute name="attrs">
                    {'invisible': [('discount_type', '=', 'fixed')]}
                </attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
