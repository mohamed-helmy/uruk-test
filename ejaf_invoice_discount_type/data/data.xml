<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <function name="toggle_noupdate" model="ir.model.data">
            <value eval="'decimal.precision'"/>
            <value eval="ref('product.decimal_discount')"/>
        </function>

        <!-- Get our main job done, i.e. modify the digits of discount precision -->
        <record id="product.decimal_discount" model="decimal.precision">
            <field name="digits">5</field>
        </record>

        <!-- (Optional) Time to clean our dirty hand, set the previously noupdate False to True again -->
        <function name="toggle_noupdate" model="ir.model.data">
            <value eval="'decimal.precision'"/>
            <value eval="ref('product.decimal_discount')"/>
        </function>

    </data>
</odoo>