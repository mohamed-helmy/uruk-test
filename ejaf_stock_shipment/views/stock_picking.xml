<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="stock_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='move_ids_without_package']//tree//field[@name='description_picking']"
                       position="after">
                    <field name="picking_id" invisible="1"/>
                    <field name="shipment_no"
                           attrs="{'column_invisible': [('parent.picking_type_code','!=', 'incoming')], 'readonly': [('parent.state', '=', 'done')]}"
                           force_save="1"/>

                </xpath>


            </field>
        </record>
    </data>
</odoo>