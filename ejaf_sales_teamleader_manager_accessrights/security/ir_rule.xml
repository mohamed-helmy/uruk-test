<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sales_teamleader_all_team_sale_orders" model="ir.rule">
            <field name="name">Show All Team Sale Orders</field>
            <field ref="sale.model_sale_order" name="model_id"/>
            <field name="domain_force">['|', '|', ('team_id.team_leader_ids', 'in', user.id), ('team_id.member_ids', 'in', user.id), ('user_id', '=', user.id)]</field>
            <field name="groups"
                   eval="[(4, ref('ejaf_sales_teamleader_manager_accessrights.group_sales_teamleader_all_documents'))]"/>
        </record>

        <record id="sales_teamleader_all_team_sale_order_lines" model="ir.rule">
            <field name="name">Show All Team Sale Order Lines</field>
            <field ref="sale.model_sale_order_line" name="model_id"/>
            <field name="domain_force">['|', '|', ('order_id.team_id.team_leader_ids', 'in', user.id), ('order_id.team_id.member_ids', 'in', user.id), ('order_id.user_id', '=', user.id)]</field>
            <field name="groups"
                   eval="[(4, ref('ejaf_sales_teamleader_manager_accessrights.group_sales_teamleader_all_documents'))]"/>
        </record>

        <record id="sales_teamleader_all_team_leads" model="ir.rule">
            <field name="name">Show All Team Leads</field>
            <field ref="crm.model_crm_lead" name="model_id"/>
            <field name="domain_force">['|', '|', ('team_id.team_leader_ids', 'in', user.id), ('team_id.member_ids', 'in', user.id), ('user_id', '=', user.id)]</field>
            <field name="groups"
                   eval="[(4, ref('ejaf_sales_teamleader_manager_accessrights.group_sales_teamleader_all_documents'))]"/>
        </record>

    </data>
</odoo>